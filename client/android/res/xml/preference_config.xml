<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="server_host"
        android:title="Server Host"
        android:contentDescription="The server host"
        android:defaultValue="letsmidi.wicp.net">
    </EditTextPreference>
    <EditTextPreference
        android:key="server_port"
        android:title="Server port"
        android:contentDescription="The server port"
        android:numeric="integer"
        android:defaultValue="1988">
    </EditTextPreference>
</PreferenceScreen>